<div class="container container--more-narrow">
  <div class="header">
    <h2>Forgot your password?</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= form_error_notification(resource) %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "mb-s" } %>
    </div>

    <div class="form-actions flex-end">
      <%= f.button :submit, "Send me reset password instructions", class: "btn btn--dark" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
