<%= turbo_frame_tag dom_id(item) do %>
  <div data-controller="accordion" class="block__item">
    <%= turbo_frame_tag nested_dom_id(item, "edit") do %>
      <div class="block__item__title">
        <%= item.name %>
        <%= actions_for(item) %>
        <div data-action="accordion#toggle" class="button">
          <%= Icon.call("plus") %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>