<%= simple_form_for([block, item].compact) do |f| %>
  <%= form_error_notification(item) %>
  <div class="form__container" data-controller="add-url">
    <%= f.input :name, 
          input_html: { data: { controller: "autofocus", add_url_target: "input" } },
          wrapper_html: { class: "form__container__input--item-name"} %>
    <div class="form__container__actions">
      <%= link_to user_path(item.new_record? ? block.user : item.user), 
          data: { turbo_frame: item.new_record? ? nested_dom_id(block, "items") : dom_id(item) },
          class: "btn btn--light btn--emoji" do %>
        <%= Icon.call("cancel_emoji") %>
      <% end %>
      <%= button_tag(class: "btn btn--primary btn--emoji") do %>
        <%= Icon.new("confirm_emoji").call %>
      <% end %>
    </div>
  </div>
<% end %>