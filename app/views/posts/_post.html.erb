<%= content_tag :div, id: dom_id(post), class: "post__preview__container drag-item", data: { sortable_url: order_post_path(post) } do %>
  <div class="post__preview">
    <%= link_to post_path(post), target: "_top" do %>
      <h2 class="post__preview--title"><%= post.title %></h2>
      <h3 class="post__preview--subtitle"><%= post.subtitle %></h3>
    <% end %>
    <p class="post__meta">
        Posted by
        <%= link_to post.user.email_username, user_path(post.user), target: "_top" %>
        on <%= formatted_date post.created_at %>
    </p>
  </div>
  <%# if policy(post).update? %>
    <div class="post__actions">
      <%= index_actions_for(post) %>      
      <%= render "posts/publish_btn", post: post, position: "top" %>
    </div>
  <%# end %>
<% end %>